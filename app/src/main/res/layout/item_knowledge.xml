<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="@color/useful_background">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_knowledge"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />


        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:text="科学知识：太阳是怎样成长的？aaaaaaaaa"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/img_news"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/tv_news_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.baidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidubaidu.com"
            android:textColor="@color/colorToolbar"
            android:layout_below="@id/tv_news_title"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/img_news"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/tv_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布时间 : 2017-1-16"
            android:textSize="11sp"
            android:textColor="@color/color_gray"
            android:layout_marginLeft="7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

