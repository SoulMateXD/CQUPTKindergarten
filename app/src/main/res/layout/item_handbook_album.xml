<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="7dp"
    >

    <ImageView
        android:id="@+id/item_handbook_album_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/soulmatexd"
        android:layout_margin="2dp"
        />

    <TextView
        android:id="@+id/item_handbook_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="什么运动会"
        android:textSize="18sp"
        android:textColor="@color/cook_book_font"
        android:layout_below="@id/item_handbook_album_image"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/item_handbook_album_number"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="231张"
        android:textColor="@color/white"
        android:background="#50000000"
        android:layout_above="@id/item_handbook_album_title"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        />

</RelativeLayout>