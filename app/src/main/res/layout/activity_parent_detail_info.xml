<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.cqupt.kindergarten.ui.activity.ParentDetailInfoActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/toolbar_blue_theme"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/top_image"
            >

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="bottom"
                android:paddingBottom="@dimen/toolbar_title_padding_bottom"
                android:text="详情"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/toolbar_title_text_size" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/parent_details_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生姓名 : 张玲玲"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/parent_details_father_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长姓名 : 张玲玲"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/parent_details_father_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式 : 15823221434"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/parent_details_mother_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长姓名 : 张玲玲"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/parent_details_mother_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式 : 15994265922"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
